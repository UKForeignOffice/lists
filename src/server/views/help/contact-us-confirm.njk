{% from "panel/macro.njk" import govukPanel %}

{% extends "layout.njk" %}
{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    {{ govukPanel({
      titleText: "We have received your comment",
      text: "Thank you for contacting us"
    }) }}

    <h3 class="govuk-heading-m">What happens next</h3>
    <p class="govuk-body">
      If your comment or query needs a response we will reply as soon as possible.
    </p>
  </div>
</div>

{% endblock %}
