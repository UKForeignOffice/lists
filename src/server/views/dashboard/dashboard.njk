{% extends "layout.njk" %}
{% from "service-navigation/macro.njk" import govukServiceNavigation %}

{% block header %}
  {% include "includes/header-list-mgmt.njk" %}

  {% set protocol = "http" + ("s" if SERVICE_DOMAIN != "localhost:3000" else "") %}
  {% set serviceUrl = protocol + "://" + SERVICE_DOMAIN + "/dashboard" %}

  {{ govukServiceNavigation({
    serviceName: "List management",
    serviceUrl: serviceUrl
  }) }}

{% endblock %}

{% block pageTitle %}
  List management - {{ title + " - " if title }}{{ SERVICE_NAME }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-column-one-quarter back-links__aside">
    {% block aside %}
    {% endblock %}
  </div>
  <div class="govuk-width-container dashboard__container">
    <div class="govuk-grid-row back-links__container">
      <div class="govuk-grid-column-full">
        {% block dashboard %}
        {% endblock %}
      </div>
    </div>
  </div>
{% endblock %}
