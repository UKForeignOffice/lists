{% extends "./dashboard.njk" %}

{% block dashboard %}
  <h2 class="govuk-heading-m" style="color: #b1b4b6;">{{list.country.name}}</h2>
  <h1 class="govuk-heading-l">
    {% if listId === 'new' %}
      Create new list
    {% else %}
      Settings - {{ _.startCase(list.type) }}
    {% endif %}
  </h1>
  <h4 class="govuk-heading-s">{{ user.email }}</h4>
  {% if publisher.change %}
    {{ dashboardMacros.successBanner("Success", publisher.change) }}
  {% endif %}

  {% if messages.successBannerHeading %}
    {{ dashboardMacros.successBanner("Success", messages.successBannerMessage, "green") }}
  {% endif %}

  {% if error.field %}
    {{ dashboardMacros.errorBanner(error) }}
  {% endif %}

  <div>
    <h2 class="govuk-heading-m">Annual review</h2>
    {% if list.jsonData.lastAnnualReviewStartDate %}
      <p class="govuk-body">The last annual review started {{ list.jsonData.lastAnnualReviewStartDate }}.</p>
    {% endif %}
    <h3 class="govuk-heading-s govuk-!-margin-0">Next annual review start date </h3>
    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dd class="govuk-summary-list__value">
          {{ list.jsonData.annualReviewStartDate }}
        </dd>
        <dd class="govuk-summary-list__actions">
          <a class="govuk-link" href="{{ dashboardRoutes.listsEditAnnualReviewDate.replace(':listId', list.id) }}">
            Change<span class="govuk-visually-hidden"> date</span>
          </a>
        </dd>
      </div>
    </dl>
  </div>

  <form class="form" action="{{ req.originalUrl.replace('listUpdated=true', '') }}" method="post" required>
    <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

        {% if listId !== 'new' %}
          <input class="govuk-input" name="country" type="text" value="{{list.country.name}}" disabled>
        {% else %}
          <select id="country-autocomplete" name="country" className="govuk-input--error">
            <option value=""></option>
            {% for country in countriesList %}
              <option value="{{ country.value }}" {{-" selected='selected'" if list.country.name === country.value}}>{{ country.text }}</option>
            {% endfor %}
          </select>
        {% endif %}
      </div>

      <hr />

      <div class="govuk-form-group {{ "govuk-form-group--error" if error.field === 'publisher' }}">
        <fieldset class="govuk-fieldset">
          <h3 class="govuk-label-wrapper">
            <label class="govuk-label govuk-label--m" for="publisher">
              Users
            </label>
          </h3>
          {% if error.field === 'publisher' %}
            <span class="govuk-error-message">
              <span class="govuk-visually-hidden">Error:</span> {{ error.text }}
            </span>
          {% endif %}
          <div id="publisher-hint" class="govuk-body">
            All users can accept and publish service providers on the funeral directors list in {{list.country.name}}.
          </div>
            <label class="govuk-label" for="publisher">
              Enter an email address
            </label>
            <input class="govuk-input" id="publisher" name="publisher" type="email" aria-describedby="publisher-hint">
        </fieldset>
      </div>

      <button class="govuk-button" data-module="govuk-button">
        {% if listId === 'new' %}
          Create
        {% else %}
          Add to list
        {% endif %}
      </button>

      {% if error.field === 'publisherList' %}
        <span class="govuk-error-message">
          <span class="govuk-visually-hidden">Error:</span> {{ error.text }}
        </span>
      {% endif %}

      <dl class="govuk-summary-list {{ "govuk-form-group--error" if error.field === 'publisherList' }}">
        {% for user in _.reverse(list.jsonData.users) %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              {{ user }}
            </dt>
            <dd class="govuk-summary-list__actions">
                <button class="govuk-button govuk-button--secondary govuk-!-margin-0" data-module="govuk-button" name="userEmail" value="{{ user }}">
                  Remove<span class="govuk-visually-hidden"> publisher</span>
                </button>
            </dd>
          </div>
        {% endfor %}
      </dl>
  </form>

  <script nonce="{{cspNonce}}">
    accessibleAutocomplete.enhanceSelectElement({
      defaultValue: '{{list.country.name}}',
      selectElement: document.querySelector('#country-autocomplete'),
      autoselect: true,
      confirmOnBlur: true
    })
  </script>
{% endblock %}
