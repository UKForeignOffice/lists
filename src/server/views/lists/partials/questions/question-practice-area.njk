<form class="form" action="{{ nextRoute }}" method="post" required>
  <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
  <div class="govuk-form-group {{ "govuk-form-group--error" if error.field === 'practice-area' }}">
    <fieldset class="govuk-fieldset" aria-describedby="practice-area-hint">
      <h1 class="govuk-label-wrapper">
        <label class="govuk-label govuk-label--l" for="practiceArea">
          In what areas of law do you need legal help?
        </label>
      </h1>
      <div id="practice-area-hint" class="govuk-hint">
        You can choose as many options from the list as you need.
      </div>
      {% if error.field === 'practice-area' %}
        <span class="govuk-error-message">
          <span class="govuk-visually-hidden">Error:</span> {{ error.text }}
        </span>
      {% endif %}
      <div class="govuk-checkboxes">
        <div class="govuk-checkboxes__item">
          <input
            class="govuk-checkboxes__input"
            id="practice-area-select-all"
            name="practiceArea"
            type="checkbox"
            value="All"
            {{ 'checked' if error.checkboxValues and "All" in error.checkboxValues }}
          />
          <label
            class="govuk-label govuk-checkboxes__label"
            for="practice-area-select-all"
          >
            Select all
          </label>
        </div>
        {% for practiceArea in legalPracticeAreasList %}
        <div class="govuk-checkboxes__item">
          <input
            class="govuk-checkboxes__input"
            id="practice-area-{{practiceArea.toLowerCase()}}"
            name="practiceArea"
            type="checkbox"
            value="{{ practiceArea }}"
            {{ 'checked' if error.checkboxValues and practiceArea in error.checkboxValues }}
          />
          <label
            class="govuk-label govuk-checkboxes__label"
            for="practice-area-{{ practiceArea.toLowerCase() }}"
          >
            {{ practiceArea }}
          </label>
        </div>
        {% endfor %}
        <input
          aria-hidden="true"
          class="govuk-radios__input"
          name="practiceArea"
          type="hidden"
          value=""
        />
      </div>
    </fieldset>
  </div>
  <button class="govuk-button" data-module="govuk-button">Continue</button>
</form>
