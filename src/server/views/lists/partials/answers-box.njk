{% import "./macros.njk" as macros %}
<div class="answers-box">
  <p class="govuk-body">Your answers:</p>
  {% if not country %}
    <p class="govuk-body">Your answers will appear here</p>
  {% endif %}
  {% if serviceType %}
    {# until other services are integrated we can hide this #}
    {# <p class="govuk-body">
      What are you looking for?<br />
      <strong>{{ _.upperFirst(_.lowerCase(serviceType)) }}</strong>
      <a class="govuk-link" href="{{ listsRoutes.finder }}?{{ removeQueryParameter(queryString, 'serviceType') }}">Change</a>
    </p> #}
  {% endif %}
  {% if sameCountry %}
    <p class="govuk-body">
      Local country preference<br />
      <strong>
        {{ "Yes, I want to use a local funeral director in this country" if sameCountry.includes("yes") else "No, I want to use a funeral director in the UK who works internationally" }}
      </strong>
      {% if print !== "yes" %}
        <a
          class="govuk-link noprint"
          href="{{ listsRoutes.finder }}?{{ removeQueryParameter(queryString, 'sameCountry') }}"
          aria-label="Change funeral director country preference answer"
        >Change</a>
      {% endif %}
    </p>
  {% endif %}
  {% if country %}
    <p class="govuk-body">
      Country<br />
      <strong>{{ _.upperFirst(country) }}</strong>{% if print !== "yes" %}
      <a class="govuk-link noprint" href="{{ listsRoutes.finder }}?{{ removeQueryParameter(queryString, 'country') }}" aria-label="Change country answer">Change</a>{% endif %}
    </p>
  {% endif %}
  {% if region %}
    <p class="govuk-body">
      Location<br />
      <strong>{{ _.upperFirst(region) }}</strong>{% if print !== "yes" %}
      <a class="govuk-link noprint" href="{{ listsRoutes.finder }}?{{ removeQueryParameter(queryString, 'region') }}" aria-label="Change country's area answer">Change</a>{% endif %}
    </p>
  {% endif %}
  {% if practiceArea %}
    <p class="govuk-body">
      Areas of law<br />
      <strong>{{ _.split(practiceArea, ",").map(_.startCase).join(", ") }}</strong>{% if print !== "yes" %}
      <a class="govuk-link noprint" href="{{ listsRoutes.finder }}?{{ removeQueryParameter(queryString, 'practiceArea') }}" aria-label="Change field of law answer">Change</a>{% endif %}
    </p>
  {% endif %}
  {% if resultsTurnaround %}
    <p class="govuk-body">
      Results speed<br />
      <strong>
        {% if resultsTurnaround == "other" %}
          No preference
        {% else %}
          {{ resultsTurnaround }} hour{{ "s" if resultsTurnaround > 1 else "" }}
        {% endif %}
      </strong>
      {% if print !== "yes" %}
        <a
          class="govuk-link noprint"
          href="{{ listsRoutes.finder }}?{{ removeQueryParameter(queryString, 'resultsTurnaround') }}"
          aria-label="Change results turnaround time answer"
        >Change</a>
      {% endif %}
    </p>
  {% endif %}
  {% if repatriation %}
    <p class="govuk-body">
      Repatriation<br />
      <strong>
        {{ "Yes" if repatriation.includes("yes") else "No" }}
      </strong>
      {% if print !== "yes" %}
        <a
          class="govuk-link noprint"
          href="{{ listsRoutes.finder }}?{{ removeQueryParameter(queryString, 'repatriation') }}"
          aria-label="Change repatriation answer"
        >Change</a>
      {% endif %}
    </p>
  {% endif %}
  {% if repatriationServices %}
    <p class="govuk-body">
      Areas of law<br />
      <strong>{{ _.split(repatriationServices, ",").map(_.startCase).join(", ") }}</strong>{% if print !== "yes" %}
      <a class="govuk-link noprint" href="{{ listsRoutes.finder }}?{{ removeQueryParameter(queryString, 'repatriationServices') }}" aria-label="Change repatriation services answer">Change</a>{% endif %}
    </p>
  {% endif %}
  {% if print !== "yes" and country %}
    <p class="govuk-body noprint">
        <a
          class="govuk-link"
          href="{{ macros.startAgainUrl(listsRoutes.finder, serviceType, getParameterValue("readNotice", queryString)) }}"
          aria-label="Start again"
        >Start again</a>
    </p>
    {% if searchResults.length > 0 %}
      <p class="govuk-body noprint">
        <a
          class="govuk-link"
          href="{{ listsRoutes.results }}?{{ queryString }}&print=yes"
          aria-label="Print all results (opens in new tab)"
          rel="noreferrer noopener"
          target="_blank"
        >Print all results  (opens in new tab)</a>
      </p>
    {% endif %}
  {% endif %}
</div>
