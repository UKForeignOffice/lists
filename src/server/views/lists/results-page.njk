{% extends "layout.njk" %}

{% block pageTitle %}
  {{ SERVICE_NAME }} - Results for {{ _.startCase(serviceType) }} in {{ _.startCase(country) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if serviceType === ServiceType.lawyers %}
        {% include "lists/partials/lawyers/lawyers-results-list.njk" %}   
      {% endif %}
      {% if serviceType === ServiceType.covidTestProviders %}
        {% include "lists/partials/covid-test-providers/covid-test-providers-results-list.njk" %}   
      {% endif %}
    </div>
    <div class="govuk-grid-column-one-third">
      {% include "lists/partials/answers-box.njk" %}
    </div>
  </div>
{% endblock %}
