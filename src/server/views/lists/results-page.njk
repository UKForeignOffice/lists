{% extends "layout.njk" %}

{% block pageTitle %}
  {{ SERVICE_NAME }} - Results for {{ _.startCase(serviceType) }} in {{ country }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if _.camelCase(serviceType) === ServiceType.lawyers %}
        {% include "lists/partials/lawyers/lawyers-results-list.njk" %}
      {% endif %}
      {% if _.camelCase(serviceType) === ServiceType.covidTestProviders %}
        {% include "lists/partials/covid-test-providers/covid-test-providers-results-list.njk" %}
      {% endif %}
      {% if _.camelCase(serviceType) === ServiceType.funeralDirectors %}
        {% include "lists/partials/funeral-directors/funeral-directors-results-list.njk" %}
      {% endif %}
      {% if _.camelCase(serviceType) === ServiceType.translatorsInterpreters %}
        {% include "lists/partials/translators-interpreters/translators-interpreters-results-list.njk" %}
      {% endif %}
    </div>
    <div class="govuk-grid-column-one-third">
      {% include "lists/partials/answers-box.njk" %}
    </div>
  </div>
  <div class="govuk-grid-column-one-third">
    {% include "lists/partials/answers-box.njk" %}
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible"/>
    <h2 class="govuk-heading-s govuk-!-margin-bottom-2">Related Content</h2>
    <div class="govuk-body">The following links open in a new tab</div>
    <ul class="govuk-list">
      {% for link in relatedLinks %}
        <li>
          <a class="govuk-link" href="{{ link.href }}" target="_blank" rel="noopener noreferrer">{{ link.name }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
<script type="text/javascript" nonce="{{ cspNonce }}">
  {% if print === "yes" %}
    window.onload = function() {
    window.print();
  }
  {% endif %}
</script>

{% endblock %}
