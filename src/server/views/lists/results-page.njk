{% extends "layout.njk" %}

{% block pageTitle %}
  {{ SERVICE_NAME }} - Results for {{ _.startCase(serviceType) }} in {{ _.startCase(country) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if _.camelCase(serviceType) === ServiceType.lawyers %}
        {% include "lists/partials/lawyers/lawyers-results-list.njk" %}
      {% endif %}
      {% if _.camelCase(serviceType) === ServiceType.covidTestProviders %}
        {% include "lists/partials/covid-test-providers/covid-test-providers-results-list.njk" %}
      {% endif %}
      {% if _.camelCase(serviceType) === ServiceType.funeralDirectors %}
        {% include "lists/partials/funeral-directors/funeral-directors-results-list.njk" %}
      {% endif %}
    </div>
    <div class="govuk-grid-column-one-third">
      {% include "lists/partials/answers-box.njk" %}
    </div>
  </div>
  <script type="text/javascript" nonce="{{ cspNonce }}">
    {% if print === "yes" %}
      window.onload = function() {
      window.print();
    }
    {% endif %}
  </script>

{% endblock %}

