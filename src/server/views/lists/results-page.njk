{% extends "layout.njk" %}

{% block pageTitle %}
  {{ SERVICE_NAME }} - Results for {{ _.startCase(serviceType) }} in {{ country }}
{% endblock %}

{% set isResultsPage = true %}

{% block content %}


  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% block heading %}
      {% endblock %}

      {% if _.camelCase(serviceType) === "lawyers" %}
        {% include "lists/partials/lawyers/lawyers-results-list.njk" %}
      {% endif %}
      {% if _.camelCase(serviceType) === "funeralDirectors" %}
        {% include "lists/partials/funeral-directors/funeral-directors-results-list.njk" %}
      {% endif %}
      {% if _.camelCase(serviceType) === "translatorsInterpreters" %}
        {% include "lists/partials/translators-interpreters/translators-interpreters-results-list.njk" %}
      {% endif %}
    </div>

    <div class="govuk-grid-column-one-third">
        {% include "lists/partials/answers-box.njk" %}
        {%  block relatedLinks %}
        <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible govuk-section-break--blue"/>
        <h2 class="govuk-heading-s govuk-!-margin-bottom-2">Related content</h2>
        <div class="govuk-body-s">The following links open in a new tab</div>
        <ul class="govuk-list govuk-body-s">
          {% for link in relatedLinks %}
            <li class="related-content__link govuk-!-margin-top-3">
              <a class="govuk-link" href="{{ link.url }}" target="_blank" rel="noopener noreferrer">{{ link.text }}</a>
            </li>
          {% endfor %}
        </ul>
        {% endblock %}

      </div>
    </div>
  </div>

<script type="text/javascript" nonce="{{ cspNonce }}">
  {% if print === "yes" %}
    window.onload = function() {
    window.print();
  }
  {% endif %}
</script>

{% endblock %}
