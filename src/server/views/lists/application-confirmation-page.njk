{% from "panel/macro.njk" import govukPanel %}

{% extends "layout.njk" %}

{% block content %}
  <div class="govuk-width-container ">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <main class="govuk-main-wrapper " id="main-content" role="main">
          {{ govukPanel({
            titleText: "Application complete"
          }) }}

          <p class="govuk-body">We have received your application. We will contact you using the email address you provided if we have any questions about your details.</p>

          <p class="govuk-body">If your application is approved your details will be published on the '{{ serviceName }}' service. You will receive an email when this happens.</p>
        </main>
      </div>
    </div>
  </div>
{% endblock %}
