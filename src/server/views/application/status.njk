{% from "warning-text/macro.njk" import govukWarningText %}
{% from "panel/macro.njk" import govukPanel %}

{% extends "layout.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: "Check your email"
      }) }}

      <p class="govuk-body">We have sent you an email containing a link.</p>

      <p class="govuk-body">You must use the link so that we can verify your email address.</p>

      {{ govukWarningText({
        text: "We cannot process your application unless you use the link.",
        iconFallbackText: "Warning"
      }) }}
    </div>
  </div>
{% endblock %}
