{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "paths": {
      "client/*": ["src/client/*"],
      "server/*": ["src/server/*"],
      "services/*": ["src/server/services/*"]
    }
  }
}
