{
  "engines": {
    "node": ">=0.12"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "nodemon",
    "start:prod": "nodemon dist/index.js",
    "build": "npm run build:types && npm run build:css && npm run build:js",
    "build:js": "npm run prisma:generate && babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps --copy-files",
    "build:css": "sass src/server/styles.scss src/public/stylesheets/styles.css",
    "build:types": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "npm run prisma:generate && jest --collect-coverage",
    "test:watch": "jest --watch",
    "prisma:generate": "npx prisma generate --schema ./src/server/models/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema ./src/server/models/schema.prisma",
    "prisma:reset": "npx prisma migrate reset --schema ./src/server/models/schema.prisma",
    "prisma:deploy": "npx prisma migrate deploy --schema ./src/server/models/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^2.19.0",
    "accessible-autocomplete": "^2.0.3",
    "aws-sdk": "^2.868.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "express-winston": "^4.1.0",
    "govuk-frontend": "^3.11.0",
    "helmet": "^4.4.1",
    "lodash": "^4.17.21",
    "nunjucks": "^3.2.3",
    "pg": "^8.5.1",
    "pg-format": "^1.0.4",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/express-winston": "^4.0.0",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.33",
    "@types/nunjucks": "^3.1.4",
    "@types/pg": "^7.14.11",
    "@types/pg-format": "^1.0.1",
    "@types/supertest": "^2.0.10",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "prisma": "^2.19.0",
    "sass": "^1.32.8",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.3",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{ts,tsx}": "eslint --fix",
    "*.js": "eslint --cache --fix"
  }
}
