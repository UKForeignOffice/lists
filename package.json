{
  "version": "1.0.3",
  "engines": {
    "node": ">=0.14"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "nodemon",
    "start:prod": "nodemon dist/index.js",
    "build": "npm run build:css && npm run build:js",
    "build:js": "npm run prisma:generate && babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps --copy-files",
    "build:css": "sass src/server/styles.scss src/public/stylesheets/styles.css",
    "build:types": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "lint": "npm run prisma:generate && eslint .",
    "lint:fix": "eslint . --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "npm run prisma:generate && npm run type-check && jest --collect-coverage",
    "test:watch": "jest --watch",
    "prisma:generate": "npx prisma generate --schema ./src/server/models/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema ./src/server/models/schema.prisma",
    "prisma:reset": "npx prisma migrate reset --schema ./src/server/models/schema.prisma --force",
    "prisma:deploy": "npx prisma migrate deploy --schema ./src/server/models/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^2.20.0",
    "accessible-autocomplete": "^2.0.3",
    "aws-sdk": "^2.868.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "express-rate-limit": "^5.2.6",
    "express-winston": "^4.1.0",
    "govuk-frontend": "^3.11.0",
    "helmet": "^4.4.1",
    "lodash": "^4.17.21",
    "nunjucks": "^3.2.3",
    "pg": "^8.5.1",
    "prisma": "^2.20.0",
    "sqlstring": "^2.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/body-parser": "^1.19.0",
    "@types/cheerio": "^0.22.28",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/express-rate-limit": "^5.1.1",
    "@types/express-winston": "^4.0.0",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.37",
    "@types/nunjucks": "^3.1.4",
    "@types/pg": "^7.14.11",
    "@types/sqlstring": "^2.3.0",
    "@types/supertest": "^2.0.11",
    "babel-plugin-module-resolver": "^4.1.0",
    "cheerio": "^1.0.0-rc.5",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "sass": "^1.32.8",
    "supertest": "^6.1.3",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.3",
    "winston-papertrail": "^1.0.5"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run type-check",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*{ts,tsx}": "prettier --write --ignore-unknown",
    "*.{ts,tsx}": "eslint --fix",
    "*.js": "eslint --cache --fix"
  }
}
