{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["es2015"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "paths": {
      "client/*": ["client/*"],
      "server/*": ["server/*"],
      "@jest/*": ["./../.jest/*"]
    }
  },
  "include": [
    ".jest/*",
    "src",
    "src/server/**/*",
    "src/client/**/*",
    "node_modules/jest-extended/types/**/*.d.ts",
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "ignore": ["dist"]

}
