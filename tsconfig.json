{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["es2021"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "paths": {
      "client/*": ["client/*"],
      "server/*": ["server/*"],
      "scheduler/*": ["scheduler/*"],
      "shared/*": ["shared/*"],
      "@jest/*": ["./../.jest/*"],
      "@forms/*": ["./../docker/apply/forms-json/*"]
    },
    "useUnknownInCatchVariables": false
  },
  "include": [
    ".jest/*",
    "docker/apply/forms-json/*",
    "src",
    "src/server/**/*",
    "src/scheduler/**/*",
    "src/client/**/*",
    "**/*.config.js",
    "node_modules/jest-extended/types/**/*.d.ts"
  ],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "jest.config.globals.js"],
  "ignore": ["dist", "cypress/support/step_definitions/**/*.js"]
}
