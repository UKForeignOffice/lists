{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    // "outFile": "./dist/client/build.js",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "paths": {
      "client/*": ["src/client/*"],
      "server/*": ["src/server/*"],
      "services/*": ["src/server/services/*"]
    }
  },
  // "include": ["src/client/**/*"],
  // "ignore": ["dist"]
}
